@page
@model WebApp.Pages.TodoItemAddPageModel

<h1>Dodaj zadanie</h1>
<form method="post">
    <input type="hidden" name="OwnerId" value="@Model.Item.OwnerId" />
    <input type="hidden" name="Id" value="@Model.Item.Id" />
    <div class="form-group">
        <label for="title" class="label-control">Tytuł</label>
        <input class="form-control" type="text" id="title" name="title" value="@Model.Item.Title" />
    </div>

    <div class="form-group">
        <label for="description" class="label-control">Opis</label>
        <textarea class="form-control" type="text" id="description" name="description" value="@Model.Item.Description" >@Model.Item.Description</textarea>
    </div>

    <div class="form-group">
        <button type="submit" class="button btn-primary">Dodaj</button>
    </div>
</form>
